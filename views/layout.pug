// layout.pug
doctype html
html
  head
    title #{title}
    link(rel='stylesheet', href='/css/styles.css')
  body
    nav
      ul
        li
          a(href='/') Inicio
        li
          a(href='/catalogo') Catálogo de Productos
        li
          a(href='/carrito') Carrito de Compra (#{carrito.length})
        li
          #login-btn
            if (usuario)
              li(class="logged-in")
                a(href='/logout') Cerrar Sesión
            else
              li
                a(href='/login') Iniciar Sesión
    .container
      block content
